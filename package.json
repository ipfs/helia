{
  "name": "helia",
  "version": "1.0.0",
  "description": "An implementation of IPFS in JavaScript",
  "license": "Apache-2.0 OR MIT",
  "homepage": "https://github.com/ipfs/helia#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ipfs/helia.git"
  },
  "bugs": {
    "url": "https://github.com/ipfs/helia/issues"
  },
  "keywords": [
    "ipfs"
  ],
  "private": true,
  "scripts": {
    "reset": "aegir run clean && aegir clean **/node_modules **/package-lock.json",
    "test": "aegir run test",
    "test:node": "aegir run test:node",
    "test:chrome": "aegir run test:chrome",
    "test:chrome-webworker": "aegir run test:chrome-webworker",
    "test:firefox": "aegir run test:firefox",
    "test:firefox-webworker": "aegir run test:firefox-webworker",
    "test:electron-main": "aegir run test:electron-main",
    "test:electron-renderer": "aegir run test:electron-renderer",
    "clean": "aegir run clean",
    "generate": "aegir run generate",
    "build": "aegir run build",
    "lint": "aegir run lint",
    "docs2": "aegir exec api-extractor -- run --local --verbose && api-documenter markdown -i ./.api-extractor -o ./docs-temp",
    "docs": "NODE_OPTIONS=--max_old_space_size=4096 aegir docs -- --name helia --titleLink './'",
    "docs:no-publish": "NODE_OPTIONS=--max_old_space_size=4096 aegir docs --publish false -- --name helia --titleLink './'",
    "dep-check": "aegir run dep-check",
    "release": "npm run docs:no-publish && aegir run release && npm run docs"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.22.27",
    "@microsoft/api-extractor": "^7.36.2",
    "aegir": "^39.0.4",
    "typedoc-plugin-mdn-links": "^3.0.3"
  },
  "type": "module",
  "workspaces": [
    "packages/*"
  ]
}
